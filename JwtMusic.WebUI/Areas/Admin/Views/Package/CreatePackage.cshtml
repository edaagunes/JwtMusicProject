@model CreatePackageDto
@{
    ViewData["Title"] = "CreatePackage";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title d-flex justify-content-center">Yeni Paket Ekle</div>
			</div>
			<form method="post">
				<div class="form-group">
					<label>Paket Adı</label>
					<input type="text" class="form-control" asp-for="Name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label>Şarkılar</label>
					<select asp-for="SongIds" asp-items="ViewBag.Songs" class="form-control select2" multiple="multiple">
					</select>
					<span asp-validation-for="SongIds" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-success">Kaydet</button>
			</form>

		</div>
	</div>
</div>


<script>
	$(document).ready(function () {
		$('.select2').select2({
			placeholder: "Şarkıları Seçin",
			allowClear: true,
			width: '100%'
		});
	});
</script>

