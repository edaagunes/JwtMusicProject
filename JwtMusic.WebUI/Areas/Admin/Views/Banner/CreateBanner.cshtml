@model CreateBannerDto
@{
	ViewData["Title"] = "CreateBanner";
	Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title d-flex justify-content-center">Yeni Banner Ekle</div>
			</div>
			<form method="post">
				<div class="card-body">
					<div class="row justify-content-center">
						<div class="col-md-12 col-lg-8">
							<div class="form-group">
								<label for="subtitle">Alt Başlık</label>
								<input type="text"
									   class="form-control"
									   id="subtitle" asp-for="SubTitle" />
							</div>
							<div class="form-group form-inline">
								<label for="inlineinput"
									   class="col-md-3 col-form-label">Başlık</label>
								<div class="col-md-9 p-0">
									<input type="text"
										   class="form-control input-full"
										   id="inlineinput" asp-for="Title" />
								</div>
							</div>
							<div class="form-group">
								<label for="comment">Açıklama</label>
								<textarea class="form-control" id="comment" asp-for="Description" rows="3">
						  </textarea>
							</div>
						</div>
					</div>
				</div>
				<div class="card-action d-flex justify-content-center">
					<button type="submit" class="btn btn-success">Kaydet</button>
					<a href="/Admin/Banner/BannerList" class="btn btn-danger">Vazgeç</a>
				</div>
			</form>
		</div>
	</div>
</div>


